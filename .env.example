# Server
NODE_ENV=production
HOST=0.0.0.0
PORT=3000
SITE_NAME=production

# Storage (SQLite file on persistent disk/volume in production)
DB_PATH=/app/data/chat.db

# Auth (must match host app LIVECHAT_JWT_SECRET)
JWT_SECRET=replace-with-a-long-random-secret
ALLOWED_ORIGINS=https://app.example.com,https://another-app.example.com

# Telegram bridge
TELEGRAM_BOT_TOKEN=
TELEGRAM_GROUP_ID=
TELEGRAM_MODE=webhook
TELEGRAM_WEBHOOK_URL=https://chat.example.com/api/telegram/webhook
TELEGRAM_WEBHOOK_PATH=/api/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=

# Anonymous sessions (enabled by default)
ANONYMOUS_ALLOWED=true
ANON_EMAIL_REQUIRED=false

# Optional (set true only for local development)
DISABLE_TELEGRAM=false
ENABLE_DEV_TOKEN_ENDPOINT=false
DEV_TOKEN_TTL_SECONDS=300
